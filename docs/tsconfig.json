{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "types": [
      "node",
      "vitepress",
      "vite/client",
      "vitest/importMeta"
    ]
  },
  "exclude": [
    "dist/**",
    "node_modules/**"
  ]
}
